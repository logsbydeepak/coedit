{
  "name": "coedit",
  "private": true,
  "scripts": {
    "format": "prettier --write . --cache",
    "cspell": "cspell ** --gitignore --cache",
    "frontend:fix": "bun run --cwd apps/frontend fix",
    "frontend:dev": "bun run --cwd apps/frontend dev",
    "container:dev": "bun run --cwd apps/container dev",
    "server:dev": "bun run --cwd apps/server dev",
    "dev": "run-p server:dev frontend:dev",
    "fix": "run-s format cspell frontend:fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "cspell": "^8.6.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "swc-node": "^1.0.0"
  },
  "workspaces": [
    "apps/server",
    "apps/frontend",
    "apps/container",
    "apps/container-api",
    "apps/templates",
    "packages/zschema",
    "packages/r",
    "packages/db"
  ],
  "trustedDependencies": [
    "es5-ext"
  ]
}
