{
  "name": "coedit",
  "private": true,
  "scripts": {
    "format": "prettier --write . --cache",
    "cspell": "cspell ** --gitignore --cache",
    "frontend:fix": "bun run --cwd apps/frontend fix",
    "frontend:dev": "bun run --cwd apps/frontend dev",
    "container:dev": "bun run --cwd apps/container dev",
    "server:dev": "bun run --cwd apps/server dev",
    "fix": "run-s format cspell frontend:fix",
    "container:tsc": "bun run --cwd apps/container tsc",
    "server:tsc": "bun run --cwd apps/server tsc",
    "tsc": "run-s server:tsc container:tsc",
    "frontend:build": "run-s tsc && bun run --cwd apps/frontend build",
    "container:build": "run-s tsc && bun run --cwd apps/container build"
  },
  "license": "ISC",
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "cspell": "^8.6.0",
    "jotai": "^2.8.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "es5-ext"
  ],
  "packageManager": "bun@1.1.8"
}
