{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "outDir": "tsc",
    "rootDir": "src",
    "paths": {
      "#/*": ["./src/*"]
    }
  }
}
