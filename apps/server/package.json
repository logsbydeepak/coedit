{
  "name": "@coedit/server",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "types": "tsc/index.d.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --test-scheduled --config wrangler.dev.toml",
    "deploy": "wrangler deploy --minify src/index.ts --config wrangler.prod.toml",
    "tsc:clean": "rm -rf tsc tsconfig.tsbuildinfo",
    "tsc:build": "tsc --build",
    "tsc": "run-s tsc:clean tsc:build"
  },
  "dependencies": {
    "@coedit/db": "workspace:*",
    "@coedit/id": "workspace:*",
    "@coedit/kv": "workspace:*",
    "@coedit/r": "workspace:*",
    "@coedit/orchestration": "workspace:*",
    "@coedit/zschema": "workspace:*",
    "@hono/zod-validator": "^0.4.1",
    "await-to-js": "^3.0.0",
    "hono": "4.6.7",
    "jose": "^5.9.6",
    "ms": "^2.1.3",
    "random-words": "^2.0.1",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241022.0",
    "@types/ms": "^0.7.34",
    "wrangler": "^3.83.0"
  }
}
