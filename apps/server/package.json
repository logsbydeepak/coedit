{
  "name": "@coedit/server",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "types": "tsc/index.d.ts",
  "scripts": {
    "dev": "wrangler dev src/index.ts --config wrangler.dev.toml",
    "deploy": "wrangler deploy --minify src/index.ts --config wrangler.prod.toml",
    "tsc:clean": "rm -rf tsc tsconfig.tsbuildinfo",
    "tsc:build": "tsc --build",
    "tsc": "run-s tsc:clean tsc:build",
    "gen:jwt-secret": "bun run jwt-secret.ts"
  },
  "dependencies": {
    "@coedit/db": "workspace:*",
    "@coedit/id": "workspace:*",
    "@coedit/kv": "workspace:*",
    "@coedit/orchestration": "workspace:*",
    "@coedit/r": "workspace:*",
    "@coedit/zschema": "workspace:*",
    "@hono/zod-validator": "^0.7.6",
    "pino": "^10.2.0",
    "await-to-js": "^3.0.0",
    "hono": "4.11.4",
    "jose": "^6.1.3",
    "ms": "^2.1.3",
    "resend": "^6.7.0",
    "@aws-sdk/client-s3": "^3.972.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260116.0",
    "@types/ms": "^2.1.0",
    "wrangler": "^4.59.2"
  }
}
